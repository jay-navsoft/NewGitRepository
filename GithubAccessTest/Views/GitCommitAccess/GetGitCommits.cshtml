@model IEnumerable<GithubAccessTest.Models.GitResponse>

@{
    ViewBag.Title = "GetGitCommits";
}

<h2>GetGitCommits</h2>

<p>
    @*@Html.ActionLink()*@
</p>
<table class="table">
    <tr>
        <th>
           Git Message
        </th>
        <th>
           Commit Date
        </th>        
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.commit.message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.commit.committer.date)
        </td>  
        <td>
            @Html.HiddenFor(modelItem => item.commit.committer.date)
        </td>
        <td>
            @Html.ActionLink("Words Count", "WordsCount", new { id=item.sha, message= item.commit.message}) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
